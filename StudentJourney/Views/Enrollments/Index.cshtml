@model IEnumerable<ContosoJourney.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JourneyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journey.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journey.TripName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journey.JourneyDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Journey.JourneyDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JourneyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Journey.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Journey.TripName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Journey.JourneyDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Journey.JourneyDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JourneyID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JourneyID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JourneyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
