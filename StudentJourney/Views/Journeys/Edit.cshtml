@model StudentJourney.ViewModels.JourneyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Journey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JourneyID" />
            <div class="form-group">
                <label asp-for="TripName" class="control-label"></label>
                <input asp-for="TripName" class="form-control" />
