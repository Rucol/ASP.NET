@model IEnumerable<StudentJourney.ViewModels.JourneyViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JourneyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JourneyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JourneyDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JourneyID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TripName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JourneyDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JourneyDuration) days
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.JourneyID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JourneyID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JourneyID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
